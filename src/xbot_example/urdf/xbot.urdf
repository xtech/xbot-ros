<?xml version="1.0"?>
<robot name="my_robot">

  <!-- Base link -->
  <link name="base_link"/>

  <!-- Laser frame with identity transform -->
  <link name="laser"/>
  <joint name="base_to_laser" type="fixed">
    <parent link="base_link"/>
    <child link="laser"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
  </joint>

  <!-- Camera frame with a static transform -->
  <link name="imu"/>
  <joint name="base_to_imu" type="fixed">
    <parent link="base_link"/>
    <child link="imu"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
  </joint>

</robot>
